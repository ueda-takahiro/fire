<%= render 'shared/header' %>
<div class="form">
  <div class="form_box">
    <div class="form_title">
      ログイン
    </div>  
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <i class="fa fa-pencil"></i>
        <%= f.label :Eメール, class: "email_label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email" %>
      </div>

      <div class="field">
        <i class="fa fa-pencil"></i>
        <%= f.label :パスワード, class: "password_label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "password" %>
      </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
